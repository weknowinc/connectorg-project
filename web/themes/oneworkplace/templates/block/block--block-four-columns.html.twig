{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}
<div{{ attributes.addClass(classes) }}>{{ title_suffix }}
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        {{ content.field_b4columnleft }}
      </div>
      <div class="col-md-3">
        {{ content.field_b4columncenterleft }}
      </div>
      <div class="col-md-3">
        {{ content.field_b4columncenterright }}
      </div>
      <div class="col-md-3">
        {{ content.field_b4columnright }}
      </div>
    </div>
  </div>
</div>