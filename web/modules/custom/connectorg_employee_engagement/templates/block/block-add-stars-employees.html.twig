{#
/**
* @file
* Default theme implementation to display a block.
*
* @see template_preprocess_block()
*
* @ingroup themeable
*/
#}
{% set classes = [
  'clear-both',
] %}
<div class="col-lg-12 col-sm-12 col-md-12 img-thumbnail ws-custom--block">
  <form action="/stars/add" method="post">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" required>
    <select name="id_user" required id="users">
      <option value="">--- Who? ---</option>
      {% for user in listUsers %}
        <option value="{{ user.id }}">{{ user.name }}</option>
      {% endfor %}
    </select>
    <select name="type_star" required id="type_star">
      <option value="">--- Select a type ---</option>
      {% for type in listTypes %}
        <option value="{{ type.tid }}">{{ type.name }}</option>
      {% endfor %}
    </select>
    <textarea name="description" id="description" cols="30" rows="10" placeholder="Add a description"
              required></textarea>
    <input type="submit" value="Save">
  </form>
</div>
